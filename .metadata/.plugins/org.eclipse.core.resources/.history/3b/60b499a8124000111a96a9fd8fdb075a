			</div>
			<div class="row" align="right">
				<button class="btn">
					<%= comment_form.submit :class => "btn primary" %>
				</button>
			</div>
			<div class="actions">
				<%= link_to 'Edit', edit_task_path(@task) %>
				<%= link_to 'Back', :back, :class => "btn" %>
			</div>
			<% end %>
		</div>
	</div>
