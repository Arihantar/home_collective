	$(document).ready(function() {
		$(".list-input").autoSuggest("/items/list_name",
			{ 
			  preFill: "<%= @item.lists.collect(&:name).join(',')%>",
			  selectedValuesProp: "id", selectedItemProp: "name", searchObjProps: "name"
			  asHtmlID: "lists_names" 
			}
		    )
	});
</script>
