class ApplicationController < ActionController::Base
  protect_from_forgery
  
  def after_sign_in_path_for(resource_or_scope)
    @tasks = Task.where("user_id=?",current_user.id)
    unless @tasks.nil?
      @tasks.each do |task|
        if task.duedate < DateTime.now.to_date
          task.status = "OVERDUE"
        end
      end
    end
    "/home/dashboard"
  end
end
