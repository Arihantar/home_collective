<%= form.fields_for :lists  do |list_form| %>
  <div class="field">
  	<% unless list_form.object.nil? || list_form.object.new_record? %>
  	<%= list_form.label :name, 'List' %>, <%= list_form.label :_destoy, 'Remove'%>, <%= list_form.check_box :_destroy %>
  	<% else %>
  	<%= list_form.label :name, 'New List' %> 
  	<% end %>
    <%= list_form.text_field :name %>
  </div>
<% end %>
