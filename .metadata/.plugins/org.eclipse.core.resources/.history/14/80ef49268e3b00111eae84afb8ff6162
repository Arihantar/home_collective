<div class="tab-content">
	<table class="zebra-striped">
			<tr>
				<th></th>
				<th><%= sortable "name" %></th>
				<th><%= sortable "duedate", "Due Date" %></th>
				<th> <%= sortable "status", "Status"%></th>
				<th><%= sortable "location"%></th>
				<th><%= "Lists"%></th>
				<th></th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
			<% @items.each do |@item| %>
	<div id="overdue">
		   <% if @item.status != 'COMPLETED' && @item.duedate < Date.today %>
		
			<div id="items">
				<%= render :partial => 'items' %>
			</div>
		</table>
	</div>
	<div id="today">
		<% elsif @item.status != 'COMPLETED' && @item.duedate == Date.today %>
		<table class="zebra-striped">
		
			<div id="items">
				<%= render :partial => 'items' %>
			</div>
		</table>
	</div>
	<div id="pending">
		<% elsif @item.status="PENDING" %>
		
			<div id="items">
				<%= render :partial => 'items' %>
			</div>
		</table>
	</div>
	<div id="completed">
		<% else %>
		
			<div id="items">
				<%= render :partial => 'items' %>
			</div>
		</table>
	</div>
	<% end %>
	<% end %>
</div>
<%end%>
