<%= form_for @list  do |list_form| %>
  <div class="field">
  	<% unless list_form.object.nil? || list_form.object.new_record? %>
  	<%= list_form.label :_destoy, 'Remove'%> <%= list_form.check_box :_destroy %>
  	<%= list_form.text_field :name %>
  	<% else %>
  	<%= list_form.label :name, 'New List' %>
    <%= list_form.text_field :name %>
  	<% end %>

  </div>
  
  <div class="actions">
	<%= list_form.submit %>
</div>
<% end %>
